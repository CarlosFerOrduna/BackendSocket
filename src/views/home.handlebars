<div class="row d-flex align-items-center justify-content-center">
    <h3 class="text-center">{{title}}</h3>
    <div id="products" class="row d-flex align-items-center justify-content-evenly">
        {{#each products}}
            <div class="card my-2" style="width: 18rem;">
                <img src="{{this.thumbnails}}" class="card-img-top" alt="${p.title}">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">{{this.id}}</p>
                    <p class="card-text">{{this.description}}</p>
                    <p class="card-text">{{this.code}}</p>
                    <p class="card-text">{{this.price}}</p>
                    <p class="card-text">{{this.status}}</p>
                    <p class="card-text">{{this.stock}}</p>
                    <p class="card-text">{{this.category}}</p>
                </div>
            </div>
        {{/each}}
    </div>
</div>